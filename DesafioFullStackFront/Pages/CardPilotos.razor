@using DesafioFullStackFront.Models

<div class="card mb-4">
    <div class="card-header">
        <strong>@DataDoGrupo.Key.Categoria - @DataDoGrupo.Key.Sexo - @DataDoGrupo.Key.Tracado</strong>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Pos.</th>
                        <th>Nome</th>
                        <th>Equipe</th>
                        <th>Nacionalidade</th>
                        <th>Melhor Volta</th>
                    </tr>
                </thead>
                <tbody>
                    @{ var posicao = 1; }
                    @foreach (var piloto in DataDoGrupo.OrderBy(p => p.MelhorVolta))
                    {
                        <tr>
                            <td>@(posicao++)</td>
                            <td>@piloto.Nome</td>
                            <td>@piloto.Equipe</td>
                            <td>@piloto.Nacionalidade</td>
                            <td>@piloto.MelhorVolta.ToString(@"mm\:ss\:ff")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@code {
    // Este é um PARÂMETRO. Ele permite que o componente "pai" (Ranking.razor)
    // passe os dados do grupo para este componente "filho".
    [Parameter]
    public IGrouping<GrupoPilotoKey, Piloto> DataDoGrupo { get; set; } = default!;
}